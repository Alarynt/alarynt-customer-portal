# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/alarynt-rules

# AWS Configuration
AWS_REGION=us-east-1

# Logging Configuration
LOG_LEVEL=info

# Email Configuration
EMAIL_PROVIDER=ses
FROM_EMAIL=noreply@alarynt.com

# SMTP Configuration (if using EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Lambda Configuration
LAMBDA_VERSION=1.0.0

# Optional: SNS Configuration
DEFAULT_SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:alarynt-notifications